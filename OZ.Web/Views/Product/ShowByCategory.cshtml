@using OZ.ViewModel
@model ProductsListViewModel
@{
    ViewBag.Title = "ShowCategory";
}

<div class="col-xs-12 col-sm-9">
        <div class="well">
            <form class="form-inline">
                <div class="form-group">
                    <label>Title</label>
                    <input class="form-control" />
                </div>
                <div class="form-group">
                    <label>Sku</label>
                    <input class="form-control" />
                </div>
                <div class="form-group">
                    <label>Price</label>
                    <input class="form-control" />
                </div>
                <button type="submit" class="btn btn-default">Search</button>
            </form>
        </div>
    <div class="row">
        @if (Model.Products.ToArray().Length > 0)
        {
            foreach (OZ.DataModel.Product p in Model.Products)
            {
                <div class="col-xs-6 col-lg-4">
                    @Html.Partial("ProductSummary", p)
                </div>
            }
        }
    </div>
    <div>
        @Html.PageLinks(Model.PagingInfo, x => Url.Action("ShowByCategory", new { page = x }))
    </div>
</div>
<div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar">
    <div class="list-group">
        @Html.Action("Menu", "Category")
    </div>
</div>
